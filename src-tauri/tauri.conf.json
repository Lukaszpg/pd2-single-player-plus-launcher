{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pd2-reawakening-launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": ".*",
        "scope": [{ "name": "PlugY", "cmd": "$RESOURCE/PlugY.exe" }],
        "sidecar": true,
        "execute": true
      },
      "process": {
        "exit": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://github.com/synpoox/pd2-reawakening/releases/latest/download/*",
          "https://raw.githubusercontent.com/synpoox/pd2-reawakening/main/pd2-reawakening.json"
        ]
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [""]
      },
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "PD2 Reawakening Launcher",
        "width": 670,
        "height": 410,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "pd2-reawakening-launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
